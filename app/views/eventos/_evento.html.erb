<div class="row">
    <div class="col s12 m12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title"><%= evento.titulo %></span>
                <p><%= evento.descricao %></p>
                <p>Data: <%= evento.data.strftime("%d/%m/%Y") %></p>
                <p>Hora:: <%= evento.hora.to_s(:evento_hora) %></p>
                <p>Local: <%= evento.local %></p>
                <p><%= evento.images? %></p>                                              
            </div>
            <div align="right" class="card-action">
                <% if current_user and current_user.admin? %>
                    <%= link_to "Editar", edit_evento_path(evento)%>
                    <%= link_to "Deletar", evento_path(evento), data: {:confirm => 'Tem certeza que deseja deletar esse evento?'}, :method => :delete%>
                <% end %>           
            </div>
        </div>
    </div>
</div>