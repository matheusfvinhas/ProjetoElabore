<div class="col s12 m12">
    <div class="card light-blue accent-4">
        <div class="card-content white-text">
            <span class="card-title" style="font-size: 25px;"><%= grade.title %></span>
            <p style="font-size: 18px;"><%= grade.description %></p>        
        </div>
        <div align="right" class="card-action">                
            <%= link_to("Baixar Documento", grade.document.url, target: '_blank') if grade.document? %>                    
            <%= link_to "Editar", edit_grade_path(grade) if current_user and (current_user.admin? or current_user.teacher?) %>
            <%= link_to "Deletar", grade_path(grade),  data: {:confirm => 'Tem certeza que deseja deletar essa aula?'}, :method => :delete if current_user and current_user.admin? %>            
        </div>
    </div>
</div>
