<div class="col s6 m6">
    <div class="card blue-grey darken-1">
        <div class="card-content white-text">
            <span class="card-title"><%= notice.title %></span>
            <p><%= notice.description %></p>               
        </div>
        <div align="right" class="card-action">            
            <%= link_to("Baixar Edital", notice.document.url, target: '_blank') if notice.document? %>
            <% if current_user and current_user.admin? %>
                <%= link_to "Editar", edit_notice_path(notice) %>
                <%= link_to "Deletar", notice_path(notice),  data: {:confirm => 'Tem certeza que deseja deletar esse edital?'}, :method => :delete%> 
            <% end %>           
        </div>
    </div>
</div>
