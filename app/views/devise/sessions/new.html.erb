<div class="container center">
  <p style="font-size: 35px;">Entrar</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "container"}) do |f| %>
    <div class="input-field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: "validate", required: :true %>
    </div>

    <div class="input-field">
      <%= f.label :password, "Senha" %>
      <%= f.password_field :password, autocomplete: "off", class: "validate", required: :true %>
    </div>    

    <div class="input-field">
      <%= f.submit "Entrar", class: "waves-effect waves-light btn #{PRIMARY_BUTTONS_COLOR}" %>      
    </div>

    <div class="right-align">
      <%= link_to "Esqueci Minha Senha", new_password_path(resource_name) %>
    </div>
  <% end %>

</div>

