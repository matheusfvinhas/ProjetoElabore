<!DOCTYPE html>
<html>
  <head>
    <title>Projeto Elabore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= nav_bar static: :top, brand: "Elabore", brand_link: root_path, responsive: true do %>
      <%= menu_group pull: :right do %>
        <% if user_signed_in? %>
          <%= menu_item "Sair", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        <% else %>
          <%= menu_item "Entrar", new_user_session_path, :class => 'navbar-link'  %>
        <% end %>        
      <% end %>
    <% end %>

  <div class="container">
    <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger"><%= alert %></div>
    <% end %>
  </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
