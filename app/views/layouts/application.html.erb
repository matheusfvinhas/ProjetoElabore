<!DOCTYPE html>
<html>
  <head>
    <title>Projeto Elabore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="padding-top: 70px;">

    <%= nav_bar fixed: :top, brand: "Elabore", responsive: true do %>    
      <%= menu_group pull: :right do %>
        <% if user_signed_in? %>
          <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= fa_icon "user-circle", text: current_user.nome %></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to edit_user_registration_path, class: 'navbar-link' do %>
                  <%= fa_icon "edit", text: "Alterar Cadastro" %>                  
                <% end %>              
              </li>
              <li role="separator" class="divider"></li>           
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class: 'navbar-link' do %>
                  <%= fa_icon "sign-out", text: "Sair" %>                  
                <% end %> 
              </li>
            </ul>
          </li>                    
        <% else %>
          <li><%= link_to "Entrar", new_user_session_path, class: "navbar-link"%></li>
        <% end %>        
      <% end %>                
    <% end %>

  <div class="container">
    <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger"><%= alert %></div>
    <% end %>
  </div>

    <div class="container">
      <%= yield %>
    </div>

    <footer style="padding-top: 80px;">
      <%= nav_bar fixed: :bottom, responsive: true do %>
        <%= menu_group pull: :left do %>
          <p class="navbar-text"><%= fa_icon "copyright", text: "2017 - Projeto Elabore" %></p> 
        <% end %>
      <% end %>      
    </footer>
  </body>
</html>
