 <% if user_signed_in? %>
  <ul id="user-dropdown" class="dropdown-content">
    <li>
      <%= link_to edit_user_registration_path do %>
        <i class="material-icons left">edit</i>Alterar Cadastro
      <% end %>
    </li>
    <li class="divider"></li>
    <li>
      <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="material-icons left">close</i>Sair
      <% end %>
    </li>
  </ul>

  <ul id="cadastrar-dropdown" class="dropdown-content">
    <li>
      <% if current_user.admin? %>
        <%= link_to "Usuários", users_path %>
        <%= link_to "Pedidos de Parceria", partners_path %>
      <% end %>
      <% if current_user.teacher? || current_user.admin? %>
        <%= link_to "Cursos", courses_path %>
      <% end %>     
    </li>
  </ul>
<% end %>

<header>
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper light-blue accent-4">
        <%= link_to "Elabore", root_path, class: "brand-logo center" %>
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>

        <ul id="nav-left" class="left hide-on-med-and-down">
          <li><%= link_to "Eventos", events_path, class: "waves-effect waves-light btn #{PRIMARY_BUTTONS_COLOR}" %></li>
          <li><%= link_to "Editais", notices_path, class: "waves-effect waves-light btn #{PRIMARY_BUTTONS_COLOR}"%></li>
        </ul>

        <ul id="nav-right" class="right hide-on-med-and-down">
          <% if user_signed_in? %>
            <% if current_user.student? %>
              <li><%= link_to "Meus Cursos", enrollments_path, class: "waves-effect waves-light btn #{PRIMARY_BUTTONS_COLOR}"%></li>
              <li><%= link_to "Cursos", courses_path, class: "waves-effect waves-light btn #{PRIMARY_BUTTONS_COLOR}"%></li>
            <% end %>
            <% if !current_user.student? %>
              <li><a class="dropdown-button" href="#!" data-activates="cadastrar-dropdown">Cadastro<i class="material-icons right">view_list</i></a></li>
            <% end %>
            <li><a class="dropdown-button" href="#!" data-activates="user-dropdown"><%= current_user.name %><i class="material-icons right">account_circle</i></a></li>
          <% else %>
            <li><%= link_to "Seja Nosso Parceiro", new_partner_path, class: "waves-effect waves-light btn #{PRIMARY_BUTTONS_COLOR}"%></li>
            <li><%= link_to "Entrar", new_user_session_path, class: "waves-effect waves-light btn #{PRIMARY_BUTTONS_COLOR}"%></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>

  <ul class="side-nav" id="mobile-demo">
    <li><%= link_to "Eventos", events_path, class: "waves-effect waves-light btn #{PRIMARY_BUTTONS_COLOR}" %></li>
    <li><%= link_to "Editais", notices_path, class: "waves-effect waves-light btn #{PRIMARY_BUTTONS_COLOR}"%></li>
    <% if user_signed_in? %>
      <% if current_user.student? %>
        <li><%= link_to "Cursos", "#", class: "waves-effect waves-light btn #{PRIMARY_BUTTONS_COLOR}"%></li>
      <% end %>
      <% if !current_user.student? %>
        <% if current_user.admin? %>
          <li><%= link_to "Usuários", users_path %></li>
          <li><%= link_to "Pedidos de Parceria", partners_path %></li>
        <% end %>
        <% if current_user.teacher? || current_user.admin? %>
          <li><%= link_to "Cursos" %></li>
        <% end %>
        <% if current_user.teacher? %>
          <li><%= link_to "Alunos" %></li>
        <% end %> 
      <% end %>
      <li><%= link_to "Alterar Cadastro", edit_user_registration_path  %></li>
      <li class="divider"></li>
      <li><%= link_to "Sair", destroy_user_session_path, method: :delete %></li>
    <% else %>
        <li><%= link_to "Seja Nosso Parceiro", new_partner_path, class: "waves-effect waves-light btn #{PRIMARY_BUTTONS_COLOR}"%></li>
        <li><%= link_to "Entrar", new_user_session_path, class: "waves-effect waves-light btn #{PRIMARY_BUTTONS_COLOR}"%></li>
    <% end %>
  </ul>
</header>


